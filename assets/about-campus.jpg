<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="skyGrad" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E0F6FF;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Sky -->
  <rect width="800" height="400" fill="url(#skyGrad)"/>
  
  <!-- Ground -->
  <rect y="400" width="800" height="200" fill="#90EE90"/>
  
  <!-- Main building -->
  <rect x="200" y="200" width="400" height="250" fill="#1a5490"/>
  <rect x="200" y="200" width="400" height="250" fill="none" stroke="#0d3a6b" stroke-width="3"/>
  
  <!-- Entrance with ramp -->
  <rect x="350" y="350" width="100" height="100" fill="#2d6db5"/>
  <polygon points="300,450 350,400 350,450" fill="#c0c0c0"/>
  <line x1="300" y1="450" x2="300" y2="455" stroke="#ffffff" stroke-width="2"/>
  <line x1="310" y1="445" x2="310" y2="450" stroke="#ffffff" stroke-width="2"/>
  <line x1="320" y1="440" x2="320" y2="445" stroke="#ffffff" stroke-width="2"/>
  <line x1="330" y1="435" x2="330" y2="440" stroke="#ffffff" stroke-width="2"/>
  <line x1="340" y1="430" x2="340" y2="435" stroke="#ffffff" stroke-width="2"/>
  
  <!-- Windows (accessible design) -->
  <rect x="230" y="230" width="60" height="80" fill="#ffffff" opacity="0.8"/>
  <rect x="310" y="230" width="60" height="80" fill="#ffffff" opacity="0.8"/>
  <rect x="430" y="230" width="60" height="80" fill="#ffffff" opacity="0.8"/>
  <rect x="510" y="230" width="60" height="80" fill="#ffffff" opacity="0.8"/>
  
  <!-- Accessibility sign -->
  <circle cx="150" cy="350" r="40" fill="#ffffff"/>
  <circle cx="150" cy="335" r="8" fill="#1a5490"/>
  <path d="M 145 345 Q 145 355, 150 360 T 155 345" fill="#1a5490"/>
  <line x1="140" y1="352" x2="130" y2="365" stroke="#1a5490" stroke-width="3"/>
  
  <!-- Trees -->
  <rect x="50" y="380" width="20" height="70" fill="#8B4513"/>
  <circle cx="60" cy="370" r="40" fill="#228B22"/>
  
  <rect x="700" y="380" width="20" height="70" fill="#8B4513"/>
  <circle cx="710" cy="370" r="40" fill="#228B22"/>
  
  <!-- Pathway -->
  <rect x="350" y="450" width="100" height="150" fill="#c0c0c0"/>
  <line x1="375" y1="450" x2="375" y2="600" stroke="#ffffff" stroke-width="2" stroke-dasharray="10,10"/>
  <line x1="425" y1="450" x2="425" y2="600" stroke="#ffffff" stroke-width="2" stroke-dasharray="10,10"/>
  
  <!-- Text -->
  <text x="400" y="180" font-family="Arial, sans-serif" font-size="36" font-weight="bold" fill="#1a5490" text-anchor="middle">
    Campus Building
  </text>
</svg>
